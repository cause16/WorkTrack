<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <header>
        <div id="navbar">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" asp-controller="home" asp-action="index">WorkTrack</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="home" asp-action="index">Головна</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="personnel" asp-action="index">Персонал</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="salaryReport" asp-action="index">Зарплатна звітність</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>

    <main>
        <div id="main">
            @RenderBody()
        </div>
    </main>

    <footer>

    </footer>

    <script src="/lib/js/bootstrap.js"></script>
</body>
</html>
